<div class="container">
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile:</h1>
        <hr>
        <h2>My Orders</h2>
        {{# each orders }}
        <div class="panel panel-default">
          <div class="panel-body">
              <ul class="list-group">
                  {{# each this.items }}
                  <li class="list-group-item">
                    <span class="badge">Qty: {{ this.qty }} | ${{ this.price }}</span>
                    <strong>{{this.item.title}}</strong><br/>
                    {{ this.item.description }}<br/>
                    {{ this.order._id }}
                </li>
                {{/each}}
            </ul>
          </div>
          <div class="panel-footer alert-success">
            <strong>Total Cost of Order(s) Y.T.D. = ${{ this.cart.totalPrice }}</strong>
          </div>
        </div>
        {{/each}}
    </div>
</div>
</div>